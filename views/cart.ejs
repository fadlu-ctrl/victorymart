    <main>

        <table>
            <thead>
                <div>
                    <tr id="toptr">
                        <td>
                            <h1>Total Price : <span id="totvalue"> 0 </span></h1>
                        </td>
                        <td>
                            <h1>Quantity : <span id="totquantity"> 0 </span></h1>
                        </td>
                    </tr>
                </div>

            </thead>

        </table>

        <table>

            <thead>
                <h1 id="totvalue"> </h1>


                <tr>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Price</th>
                    <th>Remove from Cart</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </main>
</body>
<script>
    let addCartData = JSON.parse(localStorage.getItem("cartdata")) || [];

    let totalPrice = document.getElementById("totvalue");
    let totalQuant = document.getElementById("totquantity");

    displayTable(addCartData);

    function displayTable(addCartData) {
        document.querySelector("tbody").innerHTML = "";

        let total = 0;
        let count = 0;

        addCartData.forEach(function (elem, index) {
            total += Number(elem.harga); // Assuming 'harga' is the column name for the price
            count++;

            let tr = document.createElement("tr");

            let td1 = document.createElement("td");
            td1.innerText = elem.nama; // Assuming 'nama' is the column name for the product name

            let td2 = document.createElement("td");
            td2.classList.add("cart-image");
            td2.innerHTML = `<img src="${elem.gambar}" alt="${elem.nama}">`; // Assuming 'gambar' is the column name for the image

            let td3 = document.createElement("td");
            td3.innerText = elem.harga;

            let td4 = document.createElement("td");
            td4.innerText = "Remove";
            td4.style.color = "black";
            td4.style.backgroundColor = "#ef5350";
            td4.addEventListener("click", function () {
                deleteRow(index);
            });

            tr.append(td1, td2, td3, td4);
            document.querySelector("tbody").append(tr);
        });

        totalPrice.innerText = total;
        totalQuant.innerText = count;
    }

    function deleteRow(index) {
        addCartData.splice(index, 1);
        localStorage.setItem("cartdata", JSON.stringify(addCartData));
        displayTable(addCartData);
    }
</script>

