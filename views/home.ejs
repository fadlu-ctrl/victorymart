    <script>
        // Fungsi untuk mengambil data dari API
        function fetchData() {
            fetch('https://fakestoreapi.com/products?limit=12')// permintaan fetch untuk mengambil data produk dari API Fake Store. Data produk dibatasi hingga 12 produk
                .then(response => response.json())//Setelah data berhasil diambil, mengubahnya menjadi objek JavaScript 
                .then(data => {//Setelah data berhasil diubah menjadi objek JavaScript, mengambil data itu dan menjalankan fungsi yang telah didefinisikan 
                    const productContainer = document.getElementById("product-container");//Mendapatkan elemen HTML dengan ID "product-container" untuk menyimpan data produk yang telah diambil
                    // Loop melalui data produk dari API
                    data.forEach(product => {
                        const productDiv = document.createElement("div");//Membuat elemen div baru untuk merepresentasikan produk
                        productDiv.classList.add("pro");
    
                        const productImage = document.createElement("img");//Membuat elemen gambar baru untuk menampilkan gambar produk
                        productImage.src = product.image;//Mengatur atribut src dari elemen gambar agar menunjuk ke URL gambar produk
                        productImage.alt = product.title;//Mengatur atribut alt dari elemen gambar agar menunjuk ke nama produk
    
                        const productDes = document.createElement("div");//Membuat elemen div baru untuk menampilkan deskripsi produk
                        productDes.classList.add("des");
    
                        const productSpan = document.createElement("span");//Membuat elemen span baru untuk menampilkan nama produk
                        productSpan.innerText = product.title;
    
                        const productH5 = document.createElement("h5");//Membuat elemen h5 baru untuk menampilkan harga produk
                        productH5.innerText = product.category;//Mengatur isi elemen h5 agar menunjuk ke harga produk
    
                        const productStars = document.createElement("div");//Membuat elemen div baru untuk menampilkan rating produk dalam bentuk bintang
                        productStars.classList.add("star");
                        for (let i = 0; i < 5; i++) {
                            const starIcon = document.createElement("i");
                            starIcon.classList.add("fa-solid", "fa-star");
                            productStars.appendChild(starIcon);
                        }
    
                        const productPrice = document.createElement("h4");//Membuat elemen h4 baru untuk menampilkan harga produk
                        productPrice.innerText = `$. ${product.price}`;//Mengatur isi elemen h4 agar menunjuk ke harga produk yang telah diformat menjadi bentuk uang
    
                        const productCartLink = document.createElement("a");//Membuat elemen tautan baru untuk menambahkan produk ke keranjang
                        productCartLink.href = "#";//Mengatur atribut href dari elemen tautan agar menunjuk ke alamat URL saat ini
                        productCartLink.classList.add("cart");//Menambahkan kelas CSS "cart" ke elemen tautan agar memiliki gaya yang sesuai
                        const cartIcon = document.createElement("i");//Membuat elemen i baru untuk menampilkan ikon keranjang
                        cartIcon.classList.add("fa-solid", "fa-cart-shopping");//Menambahkan kelas CSS "fa-solid" dan "fa-cart-shopping" ke elemen i agar memiliki gaya yang sesuai
                        productCartLink.appendChild(cartIcon);//Menambahkan elemen ikon keranjang ke elemen tautan keranjang produk
    
                        productDes.appendChild(productSpan);
                        productDes.appendChild(productH5);
                        productDes.appendChild(productStars);
                        productDes.appendChild(productPrice);
    
                        productDiv.appendChild(productImage);//Menambahkan elemen gambar produk ke elemen div produk
                        productDiv.appendChild(productDes);
                        productDiv.appendChild(productCartLink);
    
                        productContainer.appendChild(productDiv);//Menambahkan elemen div produk ke elemen div "product-container"
                    });
                })
                .catch(error => console.error("Error fetching data:", error));//kode ini menangani situasi di mana operasi fetch mungkin gagal dengan menjalankan blok kode yang mengatasi kesalahan tersebut
        }
    
        fetchData(); // Panggil fungsi fetchData saat halaman dimuat
    </script>
    
