<script>
 function fetchRandomFact() {
            // Menggunakan fungsi 'fetch' untuk mengambil data dari URL '/api/random-fact'.
            fetch('/api/random-fact')
                .then(response => response.json()) // Mengambil respons HTTP dan menguraikan menjadi objek JSON.
                .then(data => {
                    // Mengambil elemen dengan ID 'fakta'.
                    const randomFact = document.getElementById('fakta');
                    // Mengganti teks dalam elemen tersebut dengan data yang diterima dari server.
                    randomFact.textContent = data.fact;
                })
                .catch(error => {
                    // Menangani kesalahan jika terjadi saat mengambil data.
                    console.error('Error fetching random fact:', error);
                });
        }

        fetchRandomFact();

        // Reload a random fact when the page is refreshed
        window.addEventListener('beforeunload', fetchRandomFact);
</script>
    
